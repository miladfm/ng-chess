{
  "overrides": [
    {
      "files": ["*.ts"],
      "rules": {
        "@angular-eslint/no-host-metadata-property": "off",
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "chess",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "chess",
            "style": "kebab-case"
          }
        ],
        "@typescript-eslint/no-non-null-assertion": "off"
      }
    }
  ]
}
